    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="170dp"
        android:layout_height="170dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="7dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                  android:id="@+id/njoftimeLenda"
                  android:layout_width="match_parent"
                  android:layout_height="30dp"
                  android:text="Lenda"
                  android:textColor="#fff"
                  android:textStyle="bold"
                  android:gravity="center"
                  android:background="#0c84d4"/>

        <ImageView
                android:id="@+id/njoftimeImg"
                android:layout_width="match_parent"
                   android:layout_height="80dp"
                   android:src="@drawable/pdf1"
                   android:padding="15dp"
                    android:layout_gravity="center"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="60dp"
                      android:orientation="vertical"
                      android:background="#f4f8ff">

        <TextView
                android:id="@+id/njoftimePershkrimi"
                android:layout_width="match_parent"
                  android:layout_height="30dp"
                  android:textStyle="bold"
                android:paddingLeft="6dp"
                android:textColor="#c6a913"
                  android:text="Subjekti"
                  android:gravity="center_vertical"/>

        <TextView
                android:id="@+id/njoftimeData"
                android:layout_width="match_parent"
                  android:layout_height="30dp"
                  android:text="Data"
                android:textColor="@color/colorPrimary"
                  android:textStyle="italic"
                  android:paddingLeft="10dp"
                  android:gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>
