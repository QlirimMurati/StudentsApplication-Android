<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:weightSum="10"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              android:background="@android:color/white"
              android:orientation="vertical"
              tools:context=".Elektronika">
        >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#fff"
                >
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/txtuploadfile"
                        android:hint="File name"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColorHint="@color/blue_grey_primary_dark"
                        android:textColor="@color/blue_grey_primary_dark"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/fileuploadimg"/>
                <ImageView
                        android:id="@+id/fileuploadimg"
                        android:paddingRight="12dp"
                        android:clickable="true"
                        android:src="@drawable/file"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <LinearLayout
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:id="@+id/tablayout"
                        android:layout_height="40dp"
                >

                        <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:id="@+id/btnSem1"
                                android:text="SEM1"
                                android:textColor="@color/blue_primary"
                                android:background="#fff"
                                android:layout_height="match_parent"/>
                        <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"/>
                        <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:id="@+id/btnSem2"
                                android:textColor="@color/white"
                                android:text="SEM2"
                                android:background="@color/blue_primary"
                                android:layout_height="match_parent"/>
                        <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"/>
                        <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:id="@+id/btnSem3"
                                android:textColor="@color/white"
                                android:text="SEM3"
                                android:background="@color/blue_primary"
                                android:layout_height="match_parent"/>
                        <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"/>
                        <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:id="@+id/btnSem4"
                                android:textColor="@color/white"
                                android:text="SEM4"
                                android:background="@color/blue_primary"
                                android:layout_height="match_parent"/>
                        <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"/>
                        <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:id="@+id/btnSem5"
                                android:textColor="@color/white"
                                android:text="SEM5"
                                android:background="@color/blue_primary"
                                android:layout_height="match_parent"/>
                        <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"/>
                        <Button
                                android:layout_width="0dp"
                                android:id="@+id/btnSem6"
                                android:layout_weight="1"
                                android:textColor="@color/white"
                                android:text="SEM6"
                                android:background="@color/blue_primary"
                                android:layout_height="match_parent"/>

                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/blue_primary"
                        android:layout_marginTop="40dp"
                />

                <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/recyclerMaterialiComp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="41dp"
                        android:background="@color/white"
                ></android.support.v7.widget.RecyclerView>
        </RelativeLayout>

</LinearLayout>