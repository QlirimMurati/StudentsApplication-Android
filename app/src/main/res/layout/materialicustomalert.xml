<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#525f67">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                 android:id="@+id/r1"
                  android:orientation="horizontal">

    <ImageView
            android:id="@+id/njoftimiIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" >
    </ImageView>

    <TextView
            android:id="@+id/materialiTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:text="Fshini Fajlin!"
            android:padding="3px"
            android:textStyle="bold"
            android:layout_toRightOf="@id/njoftimiIcon"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ff0000"
            ><!-- This is line below the title -->
    </ImageView>

    <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >
        <TextView
                android:id="@+id/materialiMessage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/blue_grey_primary_dark"
                android:text="Deshironi te fshini fajlin?"
                android:paddingLeft="30dp"
                android:background="#fff"
                android:textStyle="bold"
                android:gravity="center_vertical"/>
    ></LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#fff"
                  android:gravity="center"
                  android:padding="10dp">
        <Button
                android:id="@+id/materialiDelete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:background="@color/red_primary_dark"
                android:text="Delete"
                android:layout_marginRight="7dp"
                android:padding="3px"
                android:clickable="true"
                android:textStyle="bold"
                android:gravity="center"/>
        <Button
                android:id="@+id/materialiCancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:text="Cancel"
                android:clickable="true"
                android:padding="3px"
                android:background="@color/blue_grey_primary"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>